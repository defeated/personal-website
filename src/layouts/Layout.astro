---
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";
import fontCss from "../../public/font/inter.var.css?raw";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en"
  class="h-full antialiased dark scroll-smooth">

  <head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="alternate" type="application/rss+xml" href="/rss.xml" title="Eddie Cianci - Writing about people, process and technology."/>

    <style set:html={fontCss}></style>

    <slot name="seo" />
	</head>
	<body
    class="h-full transition bg-zinc-50 dark:bg-black/95 sm:mx-8">

    <main
      class="min-h-full max-w-6xl transition bg-white dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-300/20 mx-auto pt-6 px-6 sm:px-24">

      <Header />

      <div id="content"
        class="transition-opacity opacity-0 delay-75 duration-300 ease-in">

        <slot />

      </div>

      <Footer />
    </main>

    <script defer>
      window.addEventListener("load", () => {
        document.getElementById("content")?.classList.remove("opacity-0");
      });
    </script>

  </body>
</html>
