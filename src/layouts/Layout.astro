---
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en"
  class="h-full antialiased dark">

  <head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/font/inter.var.css">
	</head>
	<body
    class="h-full transition bg-zinc-50 dark:bg-black/95 sm:mx-8">

    <main
      class="min-h-full max-w-6xl transition bg-white dark:bg-zinc-900 ring-1 ring-zinc-100 dark:ring-zinc-300/20 mx-auto pt-6 px-12 sm:px-24">

      <Header />

		  <slot />

      <Footer />
    </main>

  </body>
</html>
